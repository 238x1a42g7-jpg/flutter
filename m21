Question 07: Build a Flutter application where pressing a button will change the color of all text widgets within the application.  

source code:
import 'package:flutter/material.dart';
import 'dart:math';

void main() {
  runApp(MaterialApp(
    home: ColorChangeApp(),
    debugShowCheckedModeBanner: false,
  ));
}

class ColorChangeApp extends StatefulWidget {
  @override
  _ColorChangeAppState createState() => _ColorChangeAppState();
}

class _ColorChangeAppState extends State<ColorChangeApp> {
  Color textColor = Colors.black; // initial text color
  final Random _random = Random();

  void changeTextColor() {
    setState(() {
      // Generate a random color
      textColor = Color.fromARGB(
        255,
        _random.nextInt(256),
        _random.nextInt(256),
        _random.nextInt(256),
      );
    });
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: const Text("Change Text Color")),
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            Text(
              "Hello, Flutter!",
              style: TextStyle(fontSize: 24, color: textColor),
            ),
            const SizedBox(height: 20),
            Text(
              "Press the button to change color",
              style: TextStyle(fontSize: 20, color: textColor),
            ),
            const SizedBox(height: 40),
            ElevatedButton(
              onPressed: changeTextColor,
              child: const Text("Change Color"),
            ),
          ],
        ),
      ),
    );
  }
}
